<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_diary"
    android:padding="40dp"
    android:fitsSystemWindows="true"
    android:background="@color/menu2"
    tools:context="com.android.project.nnfriends_.DiaryActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="일지 작성"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:id="@+id/year"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:textSize="70dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/month"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="70dp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="70dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <TextView
                        android:id="@+id/quest1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Q : 돌봄 친구분의 성함을 말해주세요."
                        android:textSize="30dp"
                        android:onClick="questClick"/>
                    <TextView
                        android:id="@+id/ans1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"/>

                    <TextView
                        android:id="@+id/quest2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Q : 시간대는 아침, 점심, 저녁중
                 언제입니까?"
                        android:textSize="30dp"
                        android:onClick="questClick" />

                    <TextView
                        android:id="@+id/ans2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"/>

                    <TextView
                        android:id="@+id/quest3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Q : 봉사 시간을 말해주세요."
                        android:textSize="30dp"
                        android:onClick="questClick"/>

                    <TextView
                        android:id="@+id/ans3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"/>

                    <TextView
                        android:id="@+id/quest4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Q : 무슨 활동을 하셨나요?"
                        android:onClick="questClick"
                        android:textSize="30dp"/>

                    <TextView
                        android:id="@+id/ans4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"/>
                    <TextView
                        android:id="@+id/quest5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Q : 특이사항이 있었나요?"
                        android:onClick="questClick"
                        android:textSize="30dp"/>
                    <TextView
                        android:id="@+id/ans5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"/>
                </LinearLayout>
            </ScrollView>
            </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="end|bottom"
        android:onClick="writeClick" />
</FrameLayout>