<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu1"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.android.project.nnfriends_.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="#FFFFFF"
        android:gravity="center">

        <EditText
            android:id="@+id/editLoginID"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="010-1111-1111"
            android:paddingLeft="20dp"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="35dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editLoginPIN"
            android:inputType="numberPassword"
            android:paddingLeft="20dp"
            android:textSize="40sp"
            android:hint="*  *  *  *"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="150dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="btnClick"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/menu2"
            android:textSize="30sp"
            android:text="SIGN UP"
            android:id="@+id/btnSignup"
            android:layout_width="130dp"
            android:layout_height="70dp" />
        <Button
            android:onClick="btnClick"
            android:layout_marginLeft="20dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/menu4"
            android:textSize="30sp"
            android:text="LOG IN"
            android:id="@+id/btnLogin"
            android:layout_width="130dp"
            android:layout_height="70dp" />
    </LinearLayout>

</LinearLayout>

