<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_room_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16sp"
    android:paddingLeft="16sp"
    android:paddingRight="16sp"
    android:paddingTop="16sp"
    android:background="@color/menu2"
    android:orientation="vertical"
    tools:context="com.android.project.nnfriends_.RoomAddActivity">

    <LinearLayout
        android:id="@+id/selectWindow"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="horizontal"
        android:background="@color/menu2"
        android:gravity="center_vertical"
        android:layout_weight="0.5">
        <LinearLayout
            android:id="@+id/GuSelect"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/menu2"
            android:onClick="menuClick"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:id="@+id/gubtn"
                android:text="구"
                android:textSize="40sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:id="@+id/GuTxt"
                android:text="구"
                android:textSize="80sp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/DongSelect"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/menu2"
            android:onClick="menuClick"
            android:gravity="center_vertical"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:id="@+id/dongbtn"
                android:text="동"
                android:textSize="40sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="2"
                android:id="@+id/DongTxt"
                android:text="동"
                android:textSize="80sp"
                android:gravity="center"  />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="vertical"
        android:background="@color/menu3"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/DateBtn"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="btnClick"
                    android:text="Date"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/TimeBtn"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time"
                    android:onClick="btnClick"
                    android:textSize="30sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/DateTxt"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:textSize="30sp"/>

                <TextView
                    android:id="@+id/TimeTxt"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time"
                    android:gravity="center"
                    android:textColor="@color/colorGray"
                    android:textSize="30sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/quest2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:onClick="questClick"
                android:text="Where are you going to meet?"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/ans2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/quest3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="questClick"
                android:text="What activities are you going to do?"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/ans3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/quest4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="questClick"
                android:text="Number of participating teams"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/ans4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:textSize="30dp"/>


        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/menu3"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.2"
        android:onClick="saveClick"
        android:text="Save Activity"
        android:textSize="20sp">
    </Button>
</LinearLayout>
