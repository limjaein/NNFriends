<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu1"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context="com.android.project.nnfriends_.SignupActivity">
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editID"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textSize="35sp"
            android:hint="010-1111-1111"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp" />
        <Button
            android:backgroundTint="@color/menu3"
            android:id="@+id/btnIDcheck"
            android:layout_marginRight="3dp"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editPIN"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:paddingLeft="20dp"
            android:textSize="35sp"
            android:hint="*  *  *  *"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp" />
        <Button
            android:backgroundTint="@color/menu3"
            android:id="@+id/btnPINcheck"
            android:layout_marginRight="3dp"
            android:layout_width="60dp"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#FFFFFF"
        android:gravity="center">

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="name"
            android:paddingLeft="20dp"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:background="#FFFFFF"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:maxLength="6"
            android:id="@+id/editSSN1"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="65dp"
            android:hint="SSN"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textSize="35sp" />
        <TextView
            android:gravity="center"
            android:textSize="35sp"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <EditText
            android:maxLength="7"
            android:id="@+id/editSSN2"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="65dp"
            android:inputType="numberPassword"
            android:paddingLeft="20dp"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center">

        <RadioGroup
            android:id="@+id/stateGroup"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btnServant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:paddingLeft="10dp"
                android:text="servant"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/btnBeneficiary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Beneficiary"
                android:textSize="20sp" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:background="@color/menu1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editHelperID"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Helper ID"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textSize="35sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOCR"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/menu3"
            android:onClick="btnClick"
            android:text="OCR"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnJoin"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:backgroundTint="@color/menu4"
            android:onClick="btnClick"
            android:text="JOIN!"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/btnFingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Fingerprint"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>
